pipeline {
  
  agent any
  
  stages {
    
    stage("build") {
      
      steps {
        echo 'building the todo-app application!'
      }
    }
    
    stage("test") {
      
      steps {
         echo 'testing the todo-app application!'
      }
    }
    
    stage("deploy") {
      
      steps {
         echo 'deploying the todo-app application!'
      }
    }
  }
}
  
